@{
}
@model List<CSE422_NguyenThanhDuy_Lab2.Models.Category>

<h1>Categories</h1>

<button class="btnAdd"><a class="add" asp-action="AddCategories">Add Categories</a></button>

<table>
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
		
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>
					<button class="btnEdit"><a class="edit" asp-action="EditCategories" asp-route-id="@category.Id" class="edit">Edit</a></button>
					<button class="btnDelete"><a class="delete" asp-action="Delete" asp-route-id="@category.Id" class="delete">Delete</a></button>
				</td>
			</tr>
		}
	</tbody>
</table>
