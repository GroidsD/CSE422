
<style>
	table {
		width: 100%;
		border-collapse: collapse;
		margin: 20px 0;
		font-family: Arial, sans-serif;
	}

	table, th, td {
		border: 1px solid #ddd;
	}

	th, td {
		padding: 12px;
		text-align: left;
	}

	th {
		background-color: #f4f4f4;
	}

	tr:nth-child(even) {
		background-color: #f9f9f9;
	}

	tr:hover {
		background-color: #f1f1f1;
	}

	.actions {
		margin-top: 10px;
	}

	h1 {
		font-family: 'Arial', sans-serif;
		font-size: 24px;
		margin-bottom: 20px;
	}

	button {
		border: none;
		padding: 8px 15px;
		margin: 5px;
		cursor: pointer;
		border-radius: 5px;
		font-size: 14px;

	}

		button:hover {
			transform: scale(1.05);
		}

		button:focus {
			outline: none;
		}

	.btnAdd{
		background-color: #007bff;
	}
	.edit {
		color: black;
		text-decoration: none;
	}

	.btnEdit{
		background-color: yellow;
	}

	.delete {
		color: white;
		text-decoration: none;
	}

	.btnDelete{
		background-color: red;
	}
	.add {
		color: white;
		text-decoration: none;

	}
</style>

